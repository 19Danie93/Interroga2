                                div(class="group-material")
                                    input(name="email" type="email" class="material-control tooltips-general" placeholder="Correo Electrónico" pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" maxlength="50" data-toggle="tooltip" data-placement="top" title="Correo electrónico")
                                    span(class="highlight")
