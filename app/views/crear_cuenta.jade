                        i(class="zmdi zmdi-menu")
            div(class="container-fluid")
            div(class="container-flat-form")
                div(class="title-flat-form title-flat-blue")= titulo
                if datos
                    form(autocomplete="off" action='/modificar_cuenta' method='post' id='formValidate')
                        div(class="row")
                            div(class="col-xs-12 col-sm-8 col-sm-offset-2")
                                
                                div(class="group-material")               
                                    input(value=datos.alias name="alias" type="text" class="material-control tooltips-general" placeholder="Alias" required=""  maxlength="50" data-toggle="tooltip" data-placement="top" title="Alias")
                                    span(class="highlight")
                                    span(class="bar")
                                    label &nbsp;
                                div(class="group-material")
                                    input(value=datos.clave id="pass" name='pass' type="password" class="material-control tooltips-general" placeholder="Contraseña" required="" maxlength="50" data-toggle="tooltip" data-placement="top" title="Contraseña")      
                                    span(class="highlight")
                                    span(class="bar")
                                    label &nbsp;        
                                div(class="group-material")
                                    input(value=datos.clave id="cpassword" name="cpassword" type="password" class="material-control tooltips-general" placeholder="Repetir Contraseña" required="" maxlength="50" data-toggle="tooltip" data-placement="top" title="Repetir Contraseña")
                                    span(class="highlight")
                                    span(class="bar")
                                    label &nbsp;
                                div(class="group-material")
                                    input(value=datos.nombre name="nombre" type="text" class="material-control tooltips-general" placeholder="Nombres" required="" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,50}" maxlength="50" data-toggle="tooltip" data-placement="top" title="Nombres del estudiante")
                                    span(class="highlight")
                                    span(class="bar")
                                    label &nbsp;
                                div(class="group-material")
                                    input(value=datos.ap id="ap" name="ap" type="text" class="material-control tooltips-general" placeholder="Apellido Paterno" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,50}" maxlength="50" data-toggle="tooltip" data-placement="top" title="Apellido paterno del estudiante")
                                    span(class="highlight")
                                    span(class="bar")
                                    label &nbsp;
                                div(class="group-material")
                                    input(value=datos.am id="am" name="am" type="text" class="material-control tooltips-general" placeholder="Apellido Materno" pattern="[a-zA-ZáéíóúÁÉÍÓÚñÑ ]{1,50}" maxlength="50" data-toggle="tooltip" data-placement="top" title="Apellido materno del estudiante")
                                    span(class="highlight")
                                    span(class="bar")
                                    label &nbsp;
                                div(class="group-material")
                                    input(value=datos.email name="email" type="email" class="material-control tooltips-general" placeholder="Correo Electrónico" pattern="^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$" maxlength="50" data-toggle="tooltip" data-placement="top" title="Correo electrónico")
                                    span(class="highlight")
                                    span(class="bar")
                                    label &nbsp;
                                if datos.telefono==0
                                    -datos.telefono=''
                                div(class="group-material")
                                    input(value=datos.telefono name="telf" type="tel" class="material-control tooltips-general" placeholder="Celular" pattern="{8}" min="60000000" max="79999999" maxlength="8" data-toggle="tooltip" data-placement="top" title="Solamente 8 digitos")
                                    span(class="highlight")
                                    span(class="bar")
                                    label &nbsp;
                                p(class="text-center")
                                    button(type="reset" class="btn btn-info" style="margin-right: 20px;")
                                        i(class="zmdi zmdi-roller")
                                        span &nbsp;&nbsp; Limpiar
                                    button(type="submit" class="btn btn-primary")
                                        i(class="zmdi zmdi-floppy")
                                        span &nbsp;&nbsp; Guardar 
                else
                    form(autocomplete="off" action='/crear_cuenta' method='post' id='formValidate')
                        div(class="row")
